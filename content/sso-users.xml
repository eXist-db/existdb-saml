<sso-users>

    <!-- NOTE: groups specified here MUST exist, they are not auto-created -->

    <!-- NOTE: this is no access or privilege control configuration.
         It is used to assign group membership based on recognized user names. -->

    <!-- user/@name is the nameid string that SAML authenticates -->
    <!-- user/@realm is the nameid string that SAML authenticates -->
    <!-- user/@group primary group is mandatory, groups is optional -->

    <user name="default-user" realm="default-realm" group="guest">
        <groups/>
    </user>

</sso-users>
